      "properties" : {
        "hash" : {
          "type" : "string"
        },
        "block_hash" : {
          "type" : "string"
        },
        "block_height" : {
          "type" : "integer",
          "format" : "int64"
        },
        "block_time" : {
          "type" : "string"
        },
        "chain_received_at" : {
          "type" : "string"
        },
        "confirmations" : {
          "type" : "integer",
          "format" : "int32"
        },
        "lock_time" : {
          "type" : "integer",
          "format" : "int64"
        },
        "inputs" : {
          "type" : "array",
          "items" : {
            "$ref" : "Object"
          }
        },
        "outputs" : {
          "type" : "array",
          "items" : {
            "$ref" : "Object"
          }
        },
        "fees" : {
          "type" : "integer",
          "format" : "int64"
        },
        "amount" : {
          "type" : "integer",
          "format" : "int64"
        }
