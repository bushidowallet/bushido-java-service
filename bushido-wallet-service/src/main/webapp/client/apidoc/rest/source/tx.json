      "nickname" : "pushtx",
      "parameters" : [ {
        "name" : "body",
        "description" : "Tx hex",
        "required" : true,
        "type" : "Tx",
        "paramType" : "body",
        "allowMultiple" : false
      } ],
      "responseMessages" : [ {
        "code" : 200,
        "message" : "Ok"
      } ]
    } ]
  }, {
