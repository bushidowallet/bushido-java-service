          "type" : "integer",
          "format" : "int32"
        },
        "created_at" : {
          "type" : "string"
        },
        "delivery_attempt" : {
          "type" : "integer",
          "format" : "int32"
        },
        "notification_id" : {
          "type" : "string"
        },
        "payload" : {
          "$ref" : "ChainNotification"
        }
      }
    },
    "ChainNotification" : {
      "id" : "ChainNotification",
      "properties" : {
        "type" : {
          "type" : "string"
